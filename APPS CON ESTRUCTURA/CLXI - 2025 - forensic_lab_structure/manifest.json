  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+forensic",
      "url": "/index.html?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp", ".tiff"],
        "application/pdf": [".pdf"],
        "text/*": [".txt", ".log", ".csv", ".json"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      },
      "icons": [
        {
          "src": "assets/images/icons/file-handler-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "evidence",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "permissions": [
    "camera",
    "microphone",
    "storage-access",
    "local-fonts"
  ],
  "features": [
    "offline-analysis",
    "local-ai-models", 
    "evidence-processing",
    "report-generation",
    "case-management",
    "metadata-extraction",
    "image-analysis",
    "document-analysis",
    "digital-forensics"
  ],
  "custom": {
    "ai_models_supported": [
      "llama-local",
      "mistral-local",
      "sentence-transformers"
    ],
    "forensic_capabilities": [
      "EXIF metadata analysis",
      "Image authentication",
      "Document examination",
      "Digital evidence processing",
      "Ballistic analysis support",
      "Anthropological measurements",
      "Entomological timeline estimation"
    ],
    "supported_formats": {
      "images": ["JPG", "PNG", "TIFF", "BMP", "WebP", "RAW"],
      "documents": ["PDF", "DOCX", "TXT", "RTF"],
      "data": ["CSV", "JSON", "XML", "Log files"],
      "multimedia": ["MP4", "AVI", "MOV", "WAV", "MP3"]
    },
    "technical_specifications": {
      "min_storage_required": "2GB",
      "recommended_ram": "8GB",
      "supported_browsers": ["Chrome 90+", "Firefox 88+", "Safari 14+", "Edge 90+"],
      "offline_capabilities": true,
      "local_processing": true,
      "encryption_support": true
    }
  }
}